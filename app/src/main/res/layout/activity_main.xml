<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Code"
        android:id="@+id/t_code"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Micro"
        android:id="@+id/t_micro"
        android:layout_below="@+id/t_code"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nano"
        android:id="@+id/t_nano"
        android:layout_below="@+id/t_micro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pico"
        android:id="@+id/t_pico"
        android:layout_alignBottom="@+id/e_pico"
        android:layout_alignLeft="@+id/t_nano"
        android:layout_alignStart="@+id/t_nano" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/e_code"
        android:layout_above="@+id/t_micro"
        android:hint="Type"
        android:layout_toRightOf="@+id/t_code"
        android:layout_toEndOf="@+id/t_code" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/e_micrp"
        android:hint="Type"
        android:layout_above="@+id/t_nano"
        android:layout_toRightOf="@+id/t_micro"
        android:layout_toEndOf="@+id/t_micro" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint="Type"
        android:id="@+id/e_nano"
        android:layout_alignBottom="@+id/t_nano"
        android:layout_toRightOf="@+id/t_nano"
        android:layout_toEndOf="@+id/t_nano" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint="Type"
        android:id="@+id/e_pico"

        android:layout_below="@+id/bnano"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bcode"
        android:background="@drawable/aaa"
        android:layout_alignTop="@+id/e_code"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/aaa"
        android:id="@+id/bmicro"
        android:layout_alignTop="@+id/e_micrp"
        android:layout_alignLeft="@+id/bcode"
        android:layout_alignStart="@+id/bcode" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/aaa"
        android:id="@+id/bnano"
        android:layout_alignTop="@+id/e_nano"
        android:layout_alignLeft="@+id/bmicro"
        android:layout_alignStart="@+id/bmicro" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/aaa"
        android:id="@+id/bpico"
        android:layout_alignTop="@+id/e_pico"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="spdeveloper28@gmail.com"
        android:id="@+id/textView"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="For any Bugs report to"
        android:id="@+id/textView2"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
